<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iParking.Views.MisLibrosPage"
             Title="{Binding Title}"
             x:Name="MisLibros">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Donar " Clicked="AddItem_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="add.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <WebView HeightRequest="1000" WidthRequest="1000" Source="https://jonadric.github.io/iParkingWeb/" />
        <Button x:Name="buscar" WidthRequest="200" Text="BUSCAR ♥" Clicked="BtnRegistrar"/>
    </StackLayout>
</ContentPage>